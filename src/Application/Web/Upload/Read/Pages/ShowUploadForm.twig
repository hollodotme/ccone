{% extends "WebTheme.twig" %}

{% block pageTitle %}Bild-Upload{% endblock %}

{% block javaScriptsHead %}
	<script>(function ( e, t, n )
		{
			var r       = e.querySelectorAll( "html" )[0];
			r.className = r.className.replace( /(^|\s)no-js(\s|$)/, "$1js$2" )
		})( document, window, 0 );</script>
{% endblock %}

{% block content %}

	<form method="post" action="/upload" enctype="multipart/form-data" novalidate class="box">
		<div class="box__input">
			<svg class="box__icon" xmlns="http://www.w3.org/2000/svg" width="50" height="43" viewBox="0 0 50 43">
				<path d="M48.4 26.5c-.9 0-1.7.7-1.7 1.7v11.6h-43.3v-11.6c0-.9-.7-1.7-1.7-1.7s-1.7.7-1.7 1.7v13.2c0 .9.7 1.7 1.7 1.7h46.7c.9 0 1.7-.7 1.7-1.7v-13.2c0-1-.7-1.7-1.7-1.7zm-24.5 6.1c.3.3.8.5 1.2.5.4 0 .9-.2 1.2-.5l10-11.6c.7-.7.7-1.7 0-2.4s-1.7-.7-2.4 0l-7.1 8.3v-25.3c0-.9-.7-1.7-1.7-1.7s-1.7.7-1.7 1.7v25.3l-7.1-8.3c-.7-.7-1.7-.7-2.4 0s-.7 1.7 0 2.4l10 11.6z"/>
			</svg>
			<input type="file" name="files[]" id="file" class="box__file" data-multiple-caption="{count} Bilder ausgewählt" multiple/>
			<label for="file"><strong>Bilder auswählen</strong><span class="box__dragndrop"> oder hierher ziehen</span></label>
			<button type="submit" class="box__button">hochladen</button>
		</div>

		<div class="box__uploading">Lade Bilder hoch&hellip;</div>
		<div class="box__success">Erledigt! <a href="/upload-form" class="box__restart" role="button">Weitere hochladen?</a></div>
		<div class="box__error">Fehler! <span></span>.
			<a href="/upload-form" class="box__restart" role="button">Versuch's noch einmal!</a>
		</div>
	</form>

{% endblock %}

{% block javaScripts %}
	<script type="text/javascript" src="/js/upload-form.js"></script>
{% endblock %}

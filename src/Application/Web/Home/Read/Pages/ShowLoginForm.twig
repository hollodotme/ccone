{% extends "WebTheme.twig" %}

{% block pageTitle %}Home{% endblock %}

{% block content %}
	<br>
	<form action="/do-login" method="post" id="loginForm">
		<label for="username">Benutzer:</label>
		<input type="text" name="username" size="30" id="username">
		<br>
		<label for="password">Passwort:</label>
		<input type="password" name="password" size="30" id="password">
		{% if loginForm.hasFeedback('login') %}
			<div class="alert">
				{{ loginForm.getFeedback('login').getMessage }}
			</div>
		{% endif %}
		<p>
			<button type="submit">LOGIN</button>
		</p>
	</form>
	<br>
{% endblock %}
